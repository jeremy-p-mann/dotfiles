# tmux
TMUX_CONFIG="~/.config/tmux/.tmux.conf"
alias ta="tmux -f $TMUX_CONFIG attach-session -t"
alias tn="tmux -f $TMUX_CONFIG new-session -s"
alias tl="tmux list-sessions"
alias tk="tmux kill-session -t"

#Git
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git checkout"
alias gcb="git checkout -b"
alias gd='git diff'
alias gcm="git commit -m"
alias gpob='git push origin $(git branch --show-current)'
alias gg="git log --all --graph --decorate --oneline"
alias gr="git restore"
alias gb="git branch"
alias gf="git fetch"
alias gfa="git fetch --all"

# Lazy Git
alias lg="lazygit"

# Tree
alias tree="tree -I \"build|*egg*|dist|*cache*|.git|*checkpoint*|.DS*\""
alias t1="tree -L 1"
alias t2="tree -L 2"
alias t3="tree -L 3"
alias t1a="tree -L 1 -a"
alias t2a="tree -L 2 -a"
alias t3a="tree -L 3 -a"

alias ..="cd .."
alias 2.="cd ../.."
alias 3.="cd ../../.."

alias la="ls -A"
alias ld="ls -d */"

alias python='python3'
alias pip='pip3'
alias jl="jupyter lab"
alias pr='pipenv run'

alias lam="lookatme"

alias asc="asciiquarium"

alias v="nvim"

alias szp="source ~/.zprofile"

alias cmx="chmod +x"

# Date stuff
alias datetime='date +%Y-%m-%dT%H:%M:%S%Z'

alias firefox="open -a 'firefox'"
alias obs="open -a 'obs'"
alias weather="curl wttr.in -s | head -n 37"
alias showdocs="open -a 'Brave Browser' build/html/index.html"
alias swriting="open -a 'Brave Browser' ~/Documents/writing/docs/build/html/index.html"

alias lw="~/Documents/code/personal_health/bash/log_weight.sh"

alias md="mkdir"

alias rmr="rm -r"
alias rmrf="rm -rf"

alias cpr="cp -r"

alias fpl="pip list | fzf"
