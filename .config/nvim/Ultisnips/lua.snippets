snippet xfunction "function"
function $1 ($2)
  $3
  return $4
end
$5
endsnippet

snippet xifconditional "If conditional"
if $1 then
  $2
else
  $3
end
$4
endsnippet

snippet xforloop "For Loop"
for $1 do 
  $2
end
$3
endsnippet

snippet xforloopoverindex
for ${1:key},${2:value} in ipairs(${3:array}) do
  $4
end

endsnippet
snippet xforloopovervalues
for ${1:key},${2:value} in pairs(${3:array}) do
  $4
end
endsnippet
